{{#if event}}
  <div><h2> {{event.name}}</h2></div>
  <div>
    <p>
      <b>Date:</b> {{event.date}}<br>
      <b>Location:</b> {{event.location}}<br>
      <b>Host:</b> {{event.owner}}<br>
      <b>RSVP:</b>
      <form>
        <button class='btn attending' data-attendee="{{store.user.id}}">I'm coming!</button>
        <button class='btn interested' data-attendee="{{store.user.id}}">I'm interested</button>
      </form>
    </p>
  </div>
{{/if}}
