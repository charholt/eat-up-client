{{#each events as |event|}}
  <div class="container handlebar event-card" href="#event-details" role="button" aria-expanded="false" data-id="{{event.id}}">
      <div class="card bg-light mb-3" style="max-width: 20rem;"></div>
        <div class="card-header"><h2> {{event.name}}</h2></div>
        <div class="card-body">
          <h4 class="card-title"> {{event.name}}
          </h4>
          <p class="card-text">
                      <b>Date:</b> {{event.date}}<br>
                      <b>Location:</b> {{event.location}}<br>
                      <details>Event ID:</b> {{event.id}}</details></p>
        </div>
  </div>
{{/each}}
